.tab{
  float: left;
  width: 45%;
  text-align: center;
  padding: 10rpx 0; 
  margin-left: 8px;
  margin-right: 8px;
  background-color: #e6e6ea;
  border-radius: 8rpx;
  font-size: 14px;
}

.topTabSwiper{
  margin-top: 13px;
  zoom: 1;
}

.topTabSwiper:after{
  content: ""; 
  clear: both;
  display: block;
}

.tabBorer{
  color: white;
  background-color: #8BC34A;
  font-weight: bold;
  border-radius: 8rpx;
}

.swiper{
  width: 100%;
}

.book-nav-book {
  height: 110px;
  width: 100%;
  background-color: white;
  border-bottom: 1px solid #E6E6E6;
  display: flex;
}

.cart-thumb{
  width: 57px;
  height: 79px;
  margin: 15px 10px 0px 20px;
}

.cart-no-data{
  padding:40rpx 0;
  color: #999;
  text-align: center;
  font-size: 14px;
}

.cart-detail{
  display: flex;
  height: 70%
}

.cart-price {
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  height: 30%
}

.cart-price button {
  width: 100px;
  height: 30px;
  border-radius: 15px;
  background-color: #EA575C;
  color: white;
  font-size: 14px;
  font-weight: bold;
  margin: -4px 0px 0px 130px;
  line-height: 60rpx;
}

.cart-wrter-name {
  font-size: 12px;
  color: #848484;
}

.cart-pro-name {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 16px;
  width: 400rpx;
}

.cart-pro-price {
  font-size: 18px;
  line-height: 45rpx;
}

.cart-book-detail {
  display: flex;
  flex-direction: column;
}

.cart-find-book {
  font-size: 14px;
  color: #8BC34A;
  text-align: center;
  text-decoration:underline;
  margin-top: 5px;
}