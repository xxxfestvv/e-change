.book-title-text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  font-size:16px; margin-bottom:5px; margin-top:3px;
}

.tab{
  float: left;
  width: 45%;
  text-align: center;
  padding: 10rpx 0; 
  margin-left: 8px;
  margin-right: 8px;
  background-color: #e6e6ea;
  border-radius: 8rpx;
  font-size: 14px;
}

.topTabSwiper{
  margin-top: 13px;
  zoom: 1;
}

.topTabSwiper:after{
  content: ""; 
  clear: both;
  display: block;
}

.tabBorer{
  color: white;
  background-color: #8BC34A;
  font-weight: bold;
  border-radius: 8rpx;
}

.swiper{
  width: 100%;
}

.order-book {
  height: 110px;
  width: 100%;
  border-bottom: 1px solid #E6E6E6;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.order-book image {
  height: 79px;
  width: 57px;
  margin-left: 20px;
}

.order-btn {
  background-color: #EA575C;
  width: 85px;
  height: 30px;
  border-radius: 15px;
  color: white;
  font-size: 14px;
  font-weight: bold;
  float: right;
  margin-top: 40px;
}