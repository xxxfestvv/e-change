.tab{
  float: left;
  width: 45%;
  text-align: center;
  padding: 10rpx 0; 
  margin-left: 8px;
  margin-right: 8px;
  background-color: #e6e6ea;
  border-radius: 8rpx;
  font-size: 14px;
}

.topTabSwiper{
  margin-top: 13px;
  zoom: 1;
}

.topTabSwiper:after{
  content: ""; 
  clear: both;
  display: block;
}

.tabBorer{
  color: white;
  background-color: #8BC34A;
  font-weight: bold;
  border-radius: 8rpx;
}

.swiper{
  width: 100%;
}

.order-book {
  height: 110px;
  width: 100%;
  border-bottom: 1px solid #E6E6E6;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.order-book image {
  height: 79px;
  width: 57px;
  margin-left: 20px;
}

.order-btn {
  background-color: #EA575C;
  width: 85px;
  height: 30px;
  border-radius: 15px;
  color: white;
  font-size: 14px;
  font-weight: bold;
  float: right;
  margin-top: 40px;
}

.my-info-book {
  width: 100%;
  height: 89px;
  background-color: white;
  border-bottom: 1px solid #E6E6E6;
  display: flex;
}

.my-info-book image {
  height: 24px;
  width: 24px;
  margin: 22px 20px 0px 24px;
}

.my-info-message {
  margin: 20px 0px 0px 0px;
}

.my-list {
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ccc;
  padding: 0 10rpx;
}

.select_box {
  background-color: #eee;
  padding: 0 10rpx;
  width: 88%;
  top: 130rpx;
  overflow: hidden;
}

.select_one {
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
}

.order-book-text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  font-size:18px; margin-bottom:5px;
}