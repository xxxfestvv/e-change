.order-book {
  height: 110px;
  width: 100%;
  border-bottom: 1px solid #E6E6E6;
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  align-items: center;
}

.order-book image {
  height: 60px;
  width: 129px;
  margin-left: 10px;
}

.order-btn {
  background-color: #EA575C;
  width: 85px;
  height: 30px;
  border-radius: 15px;
  color: white;
  font-size: 14px;
  font-weight: bold;
  margin-top: 20px;
  float: left;
  margin-left: 10px;
}

.book-title-text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  /* align-content: center; */
  font-size:16px;
  margin: 3px 0 5px 10px;
}