.tab{
  float: left;
  width: 45%;
  text-align: center;
  padding: 10rpx 0; 
  margin-left: 8px;
  margin-right: 8px;
  background-color: #e6e6ea;
  border-radius: 8rpx;
  font-size: 14px;
}

.topTabSwiper{
  margin-top: 13px;
  zoom: 1;
}

.topTabSwiper:after{
  content: ""; 
  clear: both;
  display: block;
}

.tabBorer{
  color: white;
  background-color: #8BC34A;
  font-weight: bold;
  border-radius: 8rpx;
}

.swiper{
  width: 100%;
}

.isbn-btn {
  width: 171px;
  height: 30px;
  margin-top: 10px;
  border-radius: 15px;
  background-color: #8BC34A;
  text-align: center;
  color: white;
  font-weight: bold;
  font-size: 16px;
  line-height: 60rpx;
}

.isbn-hand {
  font-size: 14px;
  color: #5A5A5A;
  text-align: center;
  text-decoration:underline;
  margin-top: 5px;
}

.uploader {
  margin-top: 10px;
  height: 130px;
  width: 100%;
  background: #FFF;
  /*border: 1px solid rgba(0, 0, 0, .1);*/
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.uploader-text {
  width: 150px;
  height: 30px;
  font-size: 16px;
  font-weight: bold;
  color: white;
  border-radius: 15px;
  background-color: #8BC34A;
  line-height: 60rpx;
}

.uploader-img {
  margin: 8px 15px 0px 20px;
}

.uploader-container {
  width: 100%;
  height: 320rpx;
  padding: 0rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, .1);
}

.uploader-image {
    width: 100%;
    height: 360rpx;
}

.book-btn {
  position: fixed;
  bottom: 20px;
  width: 150px;
  height: 30px;
  background-color: #EA575C;
  font-size: 16px;
  line-height: 60rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  border-radius: 15px;
  box-shadow: 2px 2px 12px 0px #D79799;
}

.bookrule {
  height: 18px;
  font-size: 14px;
  color: #5A5A5A;
  text-align: center;
  padding-top: 10px;
  letter-spacing:5rpx;
}