.tab {
  float: left;
  width: 45%;
  text-align: center;
  padding: 10rpx 0;
  margin-left: 8px;
  margin-right: 8px;
  background-color: #e6e6ea;
  border-radius: 8rpx;
  font-size: 14px;
}

.topTabSwiper {
  margin-top: 13px;
  zoom: 1;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  color: white;
  background-color: #8bc34a;
  font-weight: bold;
  border-radius: 8rpx;
}

.swiper {
  width: 100%;
}

.order-book {
  height: 110px;
  width: 100%;
  border-bottom: 1px solid #e6e6e6;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.order-book image {
  height: 79px;
  width: 57px;
  margin-left: 20px;
}

.order-btn {
  background-color: #ea575c;
  width: 85px;
  height: 30px;
  border-radius: 15px;
  color: white;
  font-size: 14px;
  font-weight: bold;
  float: right;
  margin-top: 40px;
}

.my-info-book {
  width: 100%;
  height: 100px;
  background-color: white;
  border-bottom: 1px solid #e6e6e6;
  display: flex;
}

.my-info-book image {
  height: 24px;
  width: 24px;
  margin: 22px 20px 0px 24px;
}

.my-info-message {
  margin: 20px 0px 0px 0px;
  width: 80%;
}

.my-info-text {
  color: #9cb382;
  font-size: 13px;
  margin-top: 5px;
  line-height: 40rpx;
  width: 90%;
}

.cart-no-data {
  padding: 40rpx 0;
  color: #999;
  text-align: center;
}

.book-title-text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  font-size: 16px;
  margin-bottom: 5px;
  margin-top: 3px;
}
