.bottom-fix{
  position:fixed; 
  bottom:0;
  display: flex;
  height: 60px;
  width: 100%;
  background-color: white;
  border-top: 1px solid #E6E6E6;
}

.bottom-img{
  width: 28px;
  height: 28px;
  margin: 13px 0px 0px 26px;
}

.bottom-button{
  width: 220px;
  height: 40px;
  background-color: rgb(207, 111, 114);
  border-radius: 8rpx;
  color: white;
  font-weight: bold;
  text-align: center;
  margin: 8px 0px 0px 80px;
}

.bookimg {
  height: 235px;
  background: rgb(236, 231, 231);
}

.img {
  display:flex;           
  justify-content: center;
  padding-top: 30px;
}

.img image{
  height: 174px;
  width: 125px;
  box-shadow: 0px 0px 12px 1px rgba(90, 90, 90, 0.836)
}

.img_star{
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.bookstar{
  margin-top:15px;
  margin-left: 20px;
  font-size: 20px;
}

.title_provide{
  margin-top: 10px;
  margin-left: 20px;
  font-size: 12px;
  color: #5A5A5A;
}

.score {
  height: 50px;
  border-top: 1px solid #BBA27C;
  border-bottom: 1px solid #BBA27C;
  margin-top: 12px;
}

.score_star {
  margin-top: 13px;
  margin-left: 13px;
  float: left;
}


.list {
  background: white;
  margin-bottom: 1px;
  margin-left: 20px;
  margin-right: 20px;
  margin-top: 13px;
}

.user-content-title {
  font-size: 12px;
  color: #5A5A5A; 
  margin-bottom: 12px;
}

.user-content-view{
  display: -webkit-box;  /*关键属性（必须有的）  */
  -webkit-box-orient: vertical;   /*规定子元素的排列方向 */
  -webkit-line-clamp:3; /*行数*/
  /* 实现多余的文字隐藏并用省略号来代表被隐藏的文字    */
  overflow: hidden;
  text-overflow:ellipsis; 
  margin-bottom: 8px;
}
.user-content{
  /* display: flex; */
  font-size: 12px;
}

/* 展开 收起 */
.state{
  width: 96%;
  text-align: right;
  color: rgb(88, 103, 138);
  font-size: 12px;
  font-weight: bold;
}

.hide{
  display: -webkit-box;
}

.show{
  display: block
} 

.comment-title{
  font-size: 12px;
  color: #5A5A5A; 
  margin: 13px 20px 20px 20px;
}

.comment-container{
  display: flex; 
  margin: 13px 20px 0px 20px;
}

.comment-middle{
  flex: 1;
  margin-left: 13px;
}

.comment-name{
  display: flex;
}

.comment-star{
  height: 12px;
  width: 73.5px;
  float: left;
  margin-left: 8px;
}

.comment-img{
  width: 50px;
  height: 50px;
  border-radius: 25px;
}

.reco-row{
  display: block;
  margin-bottom: 67px;
}

.reco-col{
  display: flex;
  overflow: hidden;
}

.col-3{
  width: 33.33333%;
  text-align: center;
}

.reco-img{
  width: 95px;
  height: 132px;
}

.reco-title{
  font-size: 12px;
}